{
    "title": "Emacs key bindings (rev 9)",
    "rules": [
        {
            "description": "Emacs key bindings [C-x key strokes] (rev 1)",
            "manipulators": [
                <%# -------------------------------------------------- %>
                <%# C-x C-c (quit) %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": <%= from("c", ["left_control"], ["any"]) %>,
                    "to": <%= to([["q", ["left_command"]]]) %>,
                    "conditions": [ { "type": "variable_if", "name": "C-x", "value": 1 } ]
                },

                <%# -------------------------------------------------- %>
                <%# C-x C-f (open file) %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": <%= from("f", ["left_control"], ["any"]) %>,
                    "to": <%= to([["o", ["left_command"]]]) %>,
                    "conditions": [ { "type": "variable_if", "name": "C-x", "value": 1 } ]
                },

                <%# -------------------------------------------------- %>
                <%# C-x C-s (save file) %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": <%= from("s", ["left_control"], ["any"]) %>,
                    "to": <%= to([["s", ["left_command"]]]) %>,
                    "conditions": [ { "type": "variable_if", "name": "C-x", "value": 1 } ]
                },

                <%# -------------------------------------------------- %>
                <%# Ignore other keys after C-x %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": {
                        "any": "key_code",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "conditions": [ { "type": "variable_if", "name": "C-x", "value": 1 } ]
                },

                <%# -------------------------------------------------- %>
                <%# C-x %>
                <%# -------------------------------------------------- %>
                {
                    "type": "basic",
                    "from": <%= from("x", ["left_control"], ["any"]) %>,
                    "to": [
                        {
                            "set_variable": {
                                "name": "C-x",
                                "value": 1
                            }
                        }
                    ],
                    "to_delayed_action": {
                        "to_if_invoked": [
                            {
                                "set_variable": {
                                    "name": "C-x",
                                    "value": 0
                                }
                            }
                        ],
                        "to_if_canceled": [
                            {
                                "set_variable": {
                                    "name": "C-x",
                                    "value": 0
                                }
                            }
                        ]
                    },
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                }
            ]
        },
        {
            "description": "Emacs key bindings [left_control+keys] (rev 9)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("d", ["left_control"], ["any"]) %>,
                    "to": <%= to([["delete_forward"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("h", ["left_control"], ["any"]) %>,
                    "to": <%= to([["delete_or_backspace"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "description": "Change control+u to delete-to-beginning-of-line",
                    "type": "basic",
                    "from": <%= from("u", ["left_control"], ["any"]) %>,
                    "to": <%= to([["a", ["left_control", "left_shift"]], ["delete_or_backspace"], ["vk_none"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "description": "Change control+w to option+delete",
                    "type": "basic",
                    "from": <%= from("w", ["left_control"], ["any"]) %>,
                    "to": <%= to([["delete_or_backspace", ["left_option"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("i", ["left_control"], ["any"]) %>,
                    "to": <%= to([["tab"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("g", ["left_control"], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("open_bracket", ["left_control"], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "conditions": [
                        {
                            "type": "keyboard_type_if",
                            "keyboard_types": [
                                "ansi",
                                "iso"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": <%= from("close_bracket", ["left_control"], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>,
                    "conditions": [
                        {
                            "type": "keyboard_type_if",
                            "keyboard_types": [
                                "jis"
                            ]
                        }
                    ]
                },
                {
                    "description": "Change control+j to return",
                    "type": "basic",
                    "from": <%= from("j", ["left_control"], ["any"]) %>,
                    "to": <%= to([["return_or_enter"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("m", ["left_control"], ["any"]) %>,
                    "to": <%= to([["return_or_enter"]]) %>
                },
                {
                    "type": "basic",
                    "from": <%= from("b", ["left_control"], ["any"]) %>,
                    "to": <%= to([["left_arrow"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ["left_control"], ["any"]) %>,
                    "to": <%= to([["right_arrow"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("n", ["left_control"], ["any"]) %>,
                    "to": <%= to([["down_arrow"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("p", ["left_control"], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("v", ["left_control"], ["any"]) %>,
                    "to": <%= to([["page_down"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("a", ["left_control"], ["any"]) %>,
                    "to": <%= to([["home"]]) %>,
                    "conditions": [ <%= frontmost_application_if("microsoft_office") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("e", ["left_control"], ["any"]) %>,
                    "to": <%= to([["end"]]) %>,
                    "conditions": [ <%= frontmost_application_if("microsoft_office") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("a", ["left_control"], ["any"]) %>,
                    "to": <%= to([["left_arrow", ["left_command"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("e", ["left_control"], ["any"]) %>,
                    "to": <%= to([["right_arrow", ["left_command"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                }
            ]
        },
        {
            "description": "Emacs key bindings [left_option+keys] (rev 4)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("v", ["left_option"], ["any"]) %>,
                    "to": <%= to([["page_up"]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("b", ["left_option"], ["any"]) %>,
                    "to": <%= to([["left_arrow", ["left_option"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("f", ["left_option"], ["any"]) %>,
                    "to": <%= to([["right_arrow", ["left_option"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                },
                {
                    "type": "basic",
                    "from": <%= from("d", ["left_option"], ["any"]) %>,
                    "to": <%= to([["delete_forward", ["left_option"]]]) %>,
                    "conditions": [ <%= frontmost_application_unless("emacs_key_bindings_exception") %> ]
                }
            ]
        }
    ]
}
